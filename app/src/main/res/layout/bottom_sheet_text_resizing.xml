<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.warkiz.tickseekbar.TickSeekBar
        android:id="@+id/bottomSheetSizeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tsb_show_tick_marks_type="none"
        app:tsb_show_tick_texts="below"
        app:tsb_thumb_color="#FBC02D"
        app:tsb_thumb_size="16dp"
        app:tsb_tick_marks_size="8dp"
        app:tsb_tick_texts_color="@color/selector_tick_texts_2_color"
        app:tsb_tick_texts_size="18sp"
        app:tsb_ticks_count="4"
        app:tsb_tick_marks_drawable="@drawable/tick_marks_bg"
        app:tsb_track_background_color="#BCBCBC"
        app:tsb_track_background_size="6dp"
        app:tsb_track_progress_color="#BCBCBC"
        app:tsb_track_progress_size="6dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomSheetSizeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="確定"
        app:layout_constraintEnd_toEndOf="@+id/bottomSheetSizeSeekbar"
        app:layout_constraintStart_toStartOf="@+id/bottomSheetSizeSeekbar"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetSizeSeekbar" />

</androidx.constraintlayout.widget.ConstraintLayout>