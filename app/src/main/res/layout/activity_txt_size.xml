<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TxtSizeActivity">

    <com.warkiz.tickseekbar.TickSeekBar
        android:id="@+id/txtSizeSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tsb_show_tick_marks_type="none"
        app:tsb_show_tick_texts="below"
        app:tsb_thumb_color="#FBC02D"
        app:tsb_thumb_size="16dp"
        app:tsb_tick_marks_color="#E64A19"
        app:tsb_tick_marks_size="8dp"
        app:tsb_tick_texts_color="#000000"
        app:tsb_tick_texts_size="13sp"
        app:tsb_ticks_count="4"
        app:tsb_track_background_color="#BCBCBC"
        app:tsb_track_background_size="6dp"
        app:tsb_track_progress_color="#BCBCBC"
        app:tsb_track_progress_size="6dp" />

    <TextView
        android:id="@+id/txtSizeTxv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="熱爆了！寵物涼感商品激推必Buy  Miru是隻2歲的超Q哈士奇，個性十分親人也愛撒嬌，平時超愛討摸黏著馬麻，到了晚上還會讓馬麻抱著睡覺..."
        app:layout_constraintBottom_toTopOf="@+id/txtSizeWebView"
        app:layout_constraintEnd_toEndOf="@+id/txtSizeSeekbar"
        app:layout_constraintStart_toStartOf="@+id/txtSizeSeekbar"
        app:layout_constraintTop_toBottomOf="@+id/txtSizeSeekbar" />

    <WebView
        android:id="@+id/txtSizeWebView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtSizeTxv"
        app:layout_constraintStart_toStartOf="@+id/txtSizeTxv"
        app:layout_constraintTop_toBottomOf="@+id/txtSizeTxv" />

</androidx.constraintlayout.widget.ConstraintLayout>